<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="8dp"/>
            <stroke android:width="4dp" android:color="#1091D3"/>
            <gradient android:angle="-90" android:startColor="#1091D3" android:endColor="#1091D3"/>
        </shape>

    </item>

    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="8dp"/>
            <stroke android:width="4dp" android:color="#1182C6"/>
            <solid android:color="#1182C6"/>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="8dp"/>
            <stroke android:width="4dp" android:color="#0F6BAC"/>
            <gradient android:angle="-90" android:startColor="#0F6BAC" android:endColor="#0F6BAC"/>
        </shape>

    </item>

</selector>