<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="8dp"/>
            <stroke android:width="4dp" android:color="#1FA2FF"/>
            <gradient android:angle="-90" android:startColor="#1FA2FF" android:endColor="#1FA2FF"/>
        </shape>

    </item>

    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="8dp"/>
            <stroke android:width="4dp" android:color="#1FA2FF"/>
            <solid android:color="#1FA2FF"/>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="8dp"/>
            <stroke android:width="4dp" android:color="#0575E6"/>
            <gradient android:angle="-90" android:startColor="#0575E6" android:endColor="#0575E6"/>
        </shape>

    </item>

</selector>